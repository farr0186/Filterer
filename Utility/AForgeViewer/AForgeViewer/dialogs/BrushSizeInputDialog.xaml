<Window x:Class="AForgeViewer.dialogs.BrushSizeInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BrushSizeInputDialog" Height="200" Width="300" ResizeMode="NoResize" SizeToContent="WidthAndHeight" ShowInTaskbar="False" Topmost="True" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <Grid>
        <Border Margin="10">
            <Grid>
                <Label Content="Brush Size:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox x:Name="tbBrushSize" Height="23" Margin="74,3,0,0" TextWrapping="Wrap" Text="12" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>
                <Button Content="Ok" HorizontalAlignment="Left" Margin="97,42,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Ok"/>
                <Button Content="Cancel" HorizontalAlignment="Left" Margin="189,42,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Cancel"/>
            </Grid>
        </Border>
    </Grid>
</Window>

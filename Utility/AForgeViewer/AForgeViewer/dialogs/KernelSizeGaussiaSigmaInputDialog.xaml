<Window x:Class="AForgeViewer.dialogs.KernelSizeGaussiaSigmaInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KernelSizeGaussiaSigmaInputDialog" Height="200" Width="300" ResizeMode="NoResize" SizeToContent="WidthAndHeight" ShowInTaskbar="False" Topmost="True" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <Grid>
        <Border Margin="10">
            <Grid>
                <Label Content="Kernel Size:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox x:Name="tbKernelSize" Height="23" Margin="97,3,0,0" TextWrapping="Wrap" Text="11" HorizontalAlignment="Left" VerticalAlignment="Top" Width="177"/>
                <Label Content="Gaussia Sigma:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,28,0,0"/>
                <TextBox x:Name="tbGaussiaSigma" Height="23" Margin="97,31,0,0" TextWrapping="Wrap" Text="4.0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="177"/>
                <Button Content="Ok" HorizontalAlignment="Left" Margin="97,70,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Ok"/>
                <Button Content="Cancel" HorizontalAlignment="Left" Margin="189,70,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Cancel"/>
            </Grid>
        </Border>
    </Grid>
</Window>